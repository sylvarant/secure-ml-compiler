#########################################
#     Custom MakeFile                   #
# By Adriaan                  #
#########################################


#============================================
# Tools
#============================================

OCAMLBUILD=ocamlbuild -cflags -w,-a
COVERAGE = -use-ocamlfind -package bisect_ppx 


#============================================
# Executable Targets
#============================================

TARGET=main


#============================================
# Compilation sources
#============================================

SOURCES =$(wildcard *.ml*)


#============================================
# Compiling
#============================================

native:
	$(OCAMLBUILD) $(COVERAGE) $(TARGET).native


#============================================
# Results
#============================================
now: native


#============================================
# Extra
#============================================
clean:
	$(OCAMLBUILD) -clean

.PHONY : clean native now 

